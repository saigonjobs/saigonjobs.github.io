<!DOCTYPE html>
<html lang="vi">

<head>
    <title>SaigonJobs</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/static/style_K.css">
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
</head>

<body>
    <!-- navbar from here -->
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse w-100 order-1 order-md-0 dual-collapse2" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">IT Jobs</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Top Company
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">VINASA Rankings</a>
                        <a class="dropdown-item" href="#">Top rating</a>
                        <a class="dropdown-item" href="#">Top recruiment</a>
                    </div>
                </li>
                <li class="nav-item my-lg-0">
                    <a class="nav-link" href="#">About Us</a>
                </li>
            </ul>
        </div>

        <div class="mx-auto order-0 d-flex">
            <a class="navbar-brand mx-auto" href="#">
                <img src="/static/logo.png" alt="">
            </a>
            <a class="navbar-brand mx-auto" href="#">SaigonJobs</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse w-100 order-2 dual-collapse2" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">               
                    <% if (personal[0] !== undefined) { %> 
                        <li class="nav-item">
                            <a class="nav-link" href="#">History</a>
                        </li>
                        <li class="nav-item active">
                        <% var link = "/profile/role" + personal[1] + "/userID/" + personal[0] %>                    
                            <a class="nav-link" href="<%= link %>">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Sign Out</a>
                        </li>                    
                   <% } else {%> 
                    <li class="nav-item">
                            <a class="nav-link" href="/login">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up</a>
                        </li>
                   <% } %>
            </ul>
        </div>
    </nav>

        <div class="form-row">
          <div class="form-group col-md-3"></div>
          <div class="form-group col-md-9">
            <div class="card" style="width: 50rem;">
                  <div class="card-body">
                    <h4 class="card-title">Profile</h4>
                  </div>
                  <ul class="list-group list-group-flush">
                    <article class="item">
                    <li class="list-group-item">Family name: <%= result[0].familyname %></li>
                    <li class="list-group-item">Given name: <%= result[0].givename %> </li>
                    <li class="list-group-item">Gender: <%= result[0].gender %> </li>
                    <li class="list-group-item">DoB: <%= result[0].dob %> </li>
                    <li class="list-group-item">Address: <%= result[0].address %> </li>
                    <li class="list-group-item">Phone: <%= result[0].phonenumber %> </li>
                    <li class="list-group-item">Academic level: <%= result[0].academiclv %> </li>
                    <li class="list-group-item">Graduated: <%= result[0].graduate %> </li>
                  </article>
                    </ul>
                </div>
                <p></p>
                <% if (personal[0] == result[0]._id && personal[1] === result[0].role) { %>
                    <% var link = "/edit_user_profile/id/" + result[0]._id %>
                    <div class="col-md-4">                        
                        <a href="<%= link %>" class="btn btn-info btn-lg" role="button"
                            style="display: block;">  Edit </a>
                   </div>
                <% } %>                
          </div>
</body>
