<!DOCTYPE html>
<html lang="en">

<head>
  <title>SaigonJobs User Login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="/static/script_T.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/static/style_bar.css">
  
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="mx-auto order-lg-1 d-flex">
            <a class="navbar-brand mx-auto" href="#">
                <img src="./static/logo.png" alt="">
            </a>
            <a class="navbar-brand mx-auto" href="#">SaigonJobs</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse w-100 order-1 order-lg-0 dual-collapse2" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="./">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">IT Jobs</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Top Company
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">VINASA Rankings</a>
                        <a class="dropdown-item" href="#">Top rating</a>
                        <a class="dropdown-item" href="#">Top recruiment</a>
                    </div>
                </li>
                <li class="nav-item my-lg-0">
                    <a class="nav-link" href="#">About Us</a>
                </li>
            </ul>
        </div>

        <div class="collapse navbar-collapse w-100 order-2 dual-collapse2" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Sign Up</a>
                </li>
            </ul>
        </div>
</nav>
  <!-- Tab panes -->
  <div class="jumbotron jumbotron-fluid">
      <div>
          <img src="/static/logo.png" alt="Avatar" style="display: block; min-width: 50px; min-height: 50px; height: 200px; width: 200px; border-radius: 50%; margin-left: auto; margin-right: auto">
        </div>
        <br><hr class="short"><br>
    <div class="tab-content">
      <h1 style="text-align: center;">SaigonJobs Login</h1>
      <br>
      <div class="tab-pane container active">
        <form method="POST" action="/log_user">
          <div class="form-row">
              <!--Edit Company Name -->
              <div class="col-md-2 mb-3">                
              </div>

              <!--Edit Company Type -->
              <div class="col-md-8 mb-3">
                <span>Username</span>
                <input type="text" class="form-control" id="username" name="username" required>
              </div>

              <!--Edit Company Industry -->
              <div class="col-md-2 mb-3">                
              </div>
            </div>
            <div class="form-row">
                <!--Edit Company Name -->
                <div class="col-md-2 mb-3">                
                </div>
  
                <!--Edit Company Type -->
                <div class="col-md-8 mb-3">
                  <span>Password</span>
                  <input type="password" class="form-control" id="password" name="password" required>
                </div>
  
                <!--Edit Company Industry -->
                <div class="col-md-2 mb-3">                
                </div>
              </div>
              <div class="form-row">
                  <!--Edit Company Name -->
                  <div class="col-md-3 mb-3"></div>
                  <div class="col-md-5 mb-3">
                        <% if (message !== undefined) {%>
                            <span style="color: red; font-weight: bold;"> <%= message %></span>
                          <% } %>
                      <button class="btn btn-success btn-lg" style="display: block; margin-left: auto; margin-right: auto;">Login</button>          
                  </div>
                  <div class="col-md-2 mb-3">
                    <a href="#">Forgot Password?</a>               
                    </div>
                </div>
              
        </form>   
      </div>
    </div>
  </div>
  <%- include('sgj_footer') %>
</body>

</html>