<!DOCTYPE html>
<html lang="vi">

<head>
    <title>SaigonJobs</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/static/style_K.css">
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
</head>

<body>
    <!-- navbar from here -->
    <%- include('sgj_bar') %>
    <!-- navbar end here -->

    <di class="subc">
        <h3></h3>
    </di>

    <div class="container">
      <section class="insert">
        <% var action = "/edit_user_profile_submit/id/" + result[0]._id %>
        <form action="<%= action %>" method="post">
            <div class="form-row">
              <div class="form-group col-md-8">
                <div class="input">
                <label for="inputCity">Family name </label>
                <% var family_n = result[0].familyname %>
                <input type="text" class="form-control" id="familyname" name="familyname" placeholder="Nguyen Van" required value="<%= family_n %>">
              </div>
              </div>
              <div class="form-group col-md-4">
                <div class="input">
                <label for="inputCity">Given name</label>
                <% var given_n = result[0].givename %>
                <input type="text" class="form-control" id="givename" name="givename" placeholder="A"required value="<%= given_n %>">
              </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-2">
                <div class="input">
                  <label for="inputState">Gender</label>
                  <select id="gender" name="gender" class="form-control" required>
                    <option value="">Choose...</option>
                    <% var options = ["Male", "Female", "Other"] %>
                    <% for ( var i = 0; i < options.length; i++ ) { %>
                        <% var selected = ( result[0].gender == options[i] ) ? "selected" : ""; %>
                            <option <%= selected %>><%= options[ i ] %></option>
                    <%}%>
                  </select>
                </div>
              </div>
              <div class="form-group col-md-2">
                <div class="input">
                  <label for="inputCity">Date of Birth</label>
                  <% var dob_n = result[0].dob %>
                  <input type="date" class="form-control" id="dob" name="dob" required value="<%= dob_n %>">
                </div>
              </div>
              <div class="form-group col-md-8">
                  <div class="form-group">
                    <div class="input">
                      <label for="inputAddress">Address</label>
                      <% var addr = result[0].address %>
                      <input type="text" class="form-control" id="address" name="address" placeholder="1234 Ly Thuong Kiet" required value="<%= addr %>">
                    </div>
                    </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <div class="input">
                  <label for="inputAddress">Phone number</label>
                  <% var phone = result[0].phonenumber %>
                  <input type="text" name="phonenumber"class="form-control" id="phonenumber" placeholder="0913659245" required value="<%= phone %>">
                </div>
              </div>
              <div class="form-group col-md-8">
                <div class="input">
                  <label for="inputEmail4">Email address</label>
                  <% var email_n = result[0].email %>
                  <input type="email" class="form-control" id="email" name="email" placeholder="saigonjobs@gmail.com" required value="<%= email_n %>">
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <div class="input">
                <label for="inputCity">Academic level</label>
                <% var aca = result[0].academiclv %>
                <input type="text" class="form-control" name="academiclv" id="academiclv" required value="<%= aca %>">
              </div>
              </div>
              <div class="form-group col-md-6">
                <div class="input">
                <label for="inputState">Graduated from</label>
                <% var grad = result[0].graduate %>
                <input type="text" class="form-control" id="graduate" name="graduate" required value="<%= grad %>">
              </div>
              </div>
            <div class="col-md-4">
                <% var link = "/edit_user_profile/id/" + result[0]._id %>
                <a href="<%= link %>" class="btn btn-danger btn-lg" role="button">  Reset </a>
              </div>
              <div class="col-md-4">
                  <button style="display: block;" type="submit" class="btn btn-info btn-lg btn-block">Update</button>
              </div>
          </form>
        </section>
    </div>
    <!--Script Bootstrap-->
    <%- include('sgj_footer') %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src='/static/script.js'></script>
</body>

</html>
